<UserControl x:Class="ClientMessenger.Views.RegistrationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClientMessenger.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Width="110" Height="110" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label Content="NickName"></Label>
        <TextBox Margin="5" Height="20" Width="100" Text="{Binding ClientName, UpdateSourceTrigger=PropertyChanged}"></TextBox>
        <Button Margin="5" Height="30" Width="100" Content="Join" Command="{Binding Join}"></Button>
    </StackPanel>
</UserControl>
